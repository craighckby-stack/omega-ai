# This is a template for the .env file.
# Rename this file to .env and fill in the values.

DATABASE_URL="file:./dev.db"

# Publicly accessible application URL (used for absolute links, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# --- API Keys ---
# Required for AI model interactions
GEMINI_API_KEY=""

# --- Security & Session Management ---

# Days after which the encryption key should be rotated.
ENCRYPTION_KEY_ROTATION_DAYS=30

# Max age of the session cookie in seconds (e.g., 86400s = 24 hours)
SESSION_MAX_AGE=86400

# Authentication/Rate Limiting
MAX_LOGIN_ATTEMPTS=5
# Lockout duration in milliseconds after max attempts (e.g., 300000ms = 5 minutes)
LOCKOUT_DURATION=300000

# --- Core Logic Constraints ---

# Default system constraint level (e.g., 3.0 standard safety)
DEFAULT_CONSTRAINT_LEVEL=3.0

# Max duration for a single improvement cycle (in milliseconds)
MAX_IMPROVEMENT_CYCLE_TIME=3600000

# --- Service Ports ---

WEBSOCKET_PORT=3003
PROCESSING_PORT=3004